- head_style "rails_admin/form.css"
- head_style "rails_admin/show.css"
- head_javascript "rails_admin/application.js"
- head_javascript "rails_admin/ra.remote-form.js"
- head_javascript "rails_admin/activo/application.js"

#block-tables.block
	= breadcrumbs_for :show, @object

	.content.clearfix
		.control
			= action_button rails_admin_history_object_path(:id => params[:id]), t("admin.history.name"), :'calendar-hover'
			- if ((show_url = url_for(@object)) && ActionController::Routing::Routes.recognize_path(show_url, :method => :get) rescue nil)
				= action_button show_url, t("admin.show.show_in_app"), :show
			- if authorized? :edit, @abstract_model, @object
				= action_button rails_admin_edit_path(@abstract_model, @object.id), t("admin.list.edit_action"), :edit
			- if authorized? :delete, @abstract_model, @object
				= action_button rails_admin_delete_path(@abstract_model, @object.id), t("admin.list.delete_action"), :cross

		%h2.title= @page_name
		.inner.clearfix
			= render(:partial => 'layouts/rails_admin/flash', :locals => {:flash => flash})
			-  if @object.respond_to?('image_file_name')
				.animalMedia
					%a{:href => "#{@object.image.url}"}
						%img{:src  => "#{@object.image.url(:medium)}"}
					%br
					%br
					- form_tag("/twitter_accounts/send_tweet", :method => "post") do
						%input{:type => "hidden", :value => "#{@object.uuid}", :name => "animal_uuid"}
						%input{:type => "hidden", :value => "#{@object.id}", :name => "animal_id"}
						%input{:type => "hidden", :value => "#{@object.name}", :name => "animal_name"}
						%button{:type => "submit", :class => "button"}Send Animal To Twitter
					%br
					%p
					%br
					- form_tag("/facebook_accounts/send_wall_post", :method => "post") do
						%input{:type => "hidden", :value => "#{@object.uuid}", :name => "animal_uuid"}
						%input{:type => "hidden", :value => "#{@object.id}", :name => "animal_id"}
						%input{:type => "hidden", :value => "#{@object.name}", :name => "animal_name"}
						%button{:type => "submit", :class => "button"}Send Animal To Facebook
					%br
					%p
					%br
					- form_tag("/wordpress_accounts/send_blog_post", :method => "post") do
						%input{:type => "hidden", :value => "#{@object.uuid}", :name => "animal_uuid"}
						%input{:type => "hidden", :value => "#{@object.id}", :name => "animal_id"}
						%input{:type => "hidden", :value => "#{@object.name}", :name => "animal_name"}
						%input{:type => "hidden", :value => "#{@object.image.url(:medium)}", :name => "animal_picture"}
						%button{:type => "submit", :class => "button"}Send Animal To Wordpress
			- @model_config.show.with(:object => @object, :view => self).visible_groups.each do |fieldset|
				- unless (fields = fieldset.visible_fields.map{|f| f.with(:object => @object, :view => self)}).empty?
					- if !(values = fields.map{ |f| f.pretty_value.presence }).compact.empty? || !RailsAdmin::config.compact_show_view
						.fieldset.showAnimalInfo
							%h4= fieldset.label
							= content_tag :div, fieldset.help, :class => "help" if fieldset.help
							- fields.each_with_index do |field, index|
								- unless field.label == "Name" or field.value.blank?
									%div.field{:class => "#{field.abstract_model.to_param.singularize}_#{field.name}"}
										/- unless field.label == "Name" or value.blank?
										- if (value = values[index]) || !RailsAdmin::config.compact_show_view
											%div.label= field.label
											%div.value= value || ' - '
								- else
									- unless field.value.blank?
										%h1{:style => "font-size:60px;letter-spacing: -1px;line-height: 1;"}
											= field.value
		-  if @object.respond_to?('password')
			#wordpressForm{:style => "width:100%; padding:20px", :class => "clearfix"}
				- form_tag("/wordpress_accounts", :method => "post", :class => "form") do
					%h1 WordPress Account Signup
					Please enter your wordpress url, user name, and password.
					#user_username_field.field
						%label{:for => "site_url"} Site URL
						%input{:id => "site_url", :type => "text", :name => "wordpress_account[site_url]", :class => "string", :style => "width:px", :size => "50"}
					#user_username_field.field
						%label{:for => "blog_user"} Blog User
						%input{:id => "blog_user", :type => "text", :name => "wordpress_account[blog_user]", :class => "string", :style => "width:px", :size => "50"}
					#user_username_field.field
						%label{:for => "blog_password"} Blog Password
						%input{:id => "blog_password", :type => "password", :name => "wordpress_account[blog_password]", :class => "string", :style => "width:px", :size => "50"}
					%br
					/%input{:type => "hidden", :value => "#{@object.uuid}", :name => "animal_uuid"}
					/%input{:type => "hidden", :value => "#{@object.id}", :name => "animal_id"}
					/%input{:type => "hidden", :value => "#{@object.name}", :name => "animal_name"}
					%button{:type => "submit", :class => "button"}Add Wordpress Account
