<div class="row-fluid">
	<div class="span12 main-app-row">
		<% if notice.blank? %>

		<% else %>
			<div class="alert alert-info"><a class="close" data-dismiss="alert" href="#">&times;</a> <%= notice %></div>
		<% end %>
			<div class="well">
				<div class="row-fluid">
					<div class="span6">
						<h1><%= best_in_place @shelter, :name, :type => :input, :nil => "Click me to add content!" %></h1>
					</div>
				</div>
			</div>
			<div class="row-fluid">
				<div class="tabbable span4 ">
					<ul class="nav nav-tabs">
						<li class="active"><a href="#1" data-toggle="tab">Details</a></li>
					</ul>
					<div class="tab-content">
						<div class="tab-pane active" id="1">
							<div class="">
								<p><strong>First Name:</strong> <%= best_in_place @shelter, :contact_first, :type => :input, :nil => "Click me to add content!" %></p>
								<p><strong>Last Name:</strong> <%= best_in_place @shelter, :contact_last, :type => :input, :nil => "Click me to add content!" %></p>
								<p><strong>Website:</strong> <%= best_in_place @shelter, :website, :type => :input, :nil => "Click me to add content!" %></p>
