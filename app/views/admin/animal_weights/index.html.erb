<div class="row-fluid">
	<div class="span12">
		<% if notice.blank? %>

		<% else %>
			<div class="alert alert-info"><a class="close" data-dismiss="alert" href="#">&times;</a> <%= notice %></div>
		<% end %>
		<div class="well">
			<div class="row-fluid">
				<div class="span6">
					<a class="btn" href="/admin/animal_colors/new"><i class="icon-plus"></i>Add New Animal Weight</a>
				</div>
			</div>
		</div>
		<table class="table table-striped table-bordered">
			<col><col><col><col><col><col><col><col>
			<thead>
				<tr>
					<th><%= sort_link @search, :animal %></th>
					<th><%= sort_link @search, :weight %></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @animal_weights.each do |animal_weight| %>
					<tr>
						<td><a href="/admin/animal_colors/<%= animal_weight.id %>"><%= animal_weight.animal.name unless animal_weight.animal.blank? %></a></td>
						<td><a href="/admin/animal_colors/<%= animal_weight.id %>"><%= animal_weight.weight %></a></td>
						<td>
							<div class="btn-group">
								<a class="btn tooltip-class" href="/admin/animal_colors/<%= animal_weight.id %>" rel="tooltip" title="View Contact"><i class="icon-eye-open"></i></a>
								<% if can? :delete, animal_weight %>
									<%= link_to raw("<i class='icon-remove'></i>"), admin_animal_weight_path(animal_weight),
									            :confirm => 'Are you sure you want to delete?', :method => :delete, :class => "btn tooltip-class", :rel => "tooltip", :title => "Delete" %>
								<% end %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<%= will_paginate @animal_weights %>
	</div>
</div>


<h1>Listing animal_weights</h1>

<table>
  <tr>
    <th>Animal</th>
    <th>Uuid</th>
    <th>Weight</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @animal_weights.each do |animal_weight| %>
  <tr>
    <td><%= animal_weight.animal %></td>
    <td><%= animal_weight.uuid %></td>
    <td><%= animal_weight.weight %></td>
    <td><%= link_to 'Show', animal_weight %></td>
    <td><%= link_to 'Edit', edit_animal_weight_path(animal_weight) %></td>
    <td><%= link_to 'Destroy', animal_weight, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

