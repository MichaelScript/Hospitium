<div class="row-fluid">
	<div class="span12">
		<% if notice.blank? %>

		<% else %>
			<div class="alert alert-info"><a class="close" data-dismiss="alert" href="#">&times;</a> <%= notice %></div>
		<% end %>
		<div class="well">
			<div class="row-fluid">
				<div class="span6">
					<a class="btn" href="/admin/species/new"><i class="icon-plus"></i>Add New Species</a>
				</div>
			</div>
		</div>
		<table class="table table-striped table-bordered">
			<col><col><col><col><col><col><col><col>
			<thead>
				<tr>
					<th><%= sort_link @search, :name %></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @species.each do |species| %>
					<tr>
						<td><a href="/admin/species/<%= species.id %>"><%= species.name %></a></td>
						<td>
							<div class="btn-group">
								<a class="btn tooltip-class" href="/admin/species/<%= species.id %>" rel="tooltip" title="View Contact"><i class="icon-eye-open"></i></a>
								<% if can? :destroy, species %>
									<%= link_to raw("<i class='icon-remove'></i>"), admin_species_path(species),
									            :data => {:confirm => 'Are you sure you want to delete?'}, :method => :delete, :class => "btn tooltip-class", :rel => "tooltip", :title => "Delete" %>
								<% end %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<%= will_paginate @species %>
	</div>
</div>
