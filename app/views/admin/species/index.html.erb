<div class="row">
	<div class="col-sm-12 col-md-12 col-lg-12">
		<a class="btn btn-primary btn-rad btn-trans" href="/admin/species/new"><i class="fa fa-plus tipster" title="Add New"></i><span class="hidden-xs hidden-sm"> Add New Species</span></a>
	</div>
</div>
<div class="row">
	<div class="col-sm-12 col-md-12 col-lg-12">
		<div class="block-flat">
			<table class="no-border">
				<col><col><col><col><col><col><col><col>
				<thead class="no-border">
					<tr>
						<th><%= sort_link @search, :name %></th>
						<th></th>
					</tr>
				</thead>
				<tbody class="no-border-x no-border-y">
					<% @species.each do |species| %>
						<tr>
							<td><a href="/admin/species/<%= species.id %>"><%= species.name %></a></td>
							<td>
								<div class="btn-group">
									<a class="btn tipster" href="/admin/species/<%= species.id %>" title="View Contact"><i class="fa fa-eye"></i></a>
									<% if can? :destroy, species and species.animals.blank? %>
										<%= link_to raw("<i class='fa fa-remove'></i>"), admin_species_path(species),
										            :data => {:confirm => 'Are you sure you want to delete?'}, :method => :delete, :class => "btn tipster", :title => "Delete" %>
									<% end %>
								</div>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<%= will_paginate @species, renderer: BootstrapPagination::Rails %>
		</div>
	</div>
</div>
