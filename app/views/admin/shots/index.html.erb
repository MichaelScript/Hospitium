<div class="row-fluid">
  <div class="span12">
    <div class="well">
      <div class="row-fluid">
        <div class="span6">
          <a class="btn" href="/admin/shots/new"><i class="icon-plus"></i>Add New Shot</a>
          &nbsp;
          <a class="btn" href="/admin/shots.csv" id="animal_sync_button"><i class="icon-download"></i> Export</a>
        </div>
        <div class="span1"> &nbsp; </div>
        <div class="span5 pull-right">
        <a class="btn pull-right" data-toggle="modal" href="#myModal" ><i class="icon-search"></i> Advanced Search</a>
        </div>
        <!-- <form class="form-search">
          <input type="text" class="input-medium search-query">
          <button type="submit" class="btn">Search</button>
        </form> -->
      </div>
    </div>
    <table class="table table-striped table-bordered">
      <col><col><col><col><col><col><col><col>
      <thead>
        <tr>
          <th><%= sort_link @presenter.search, :name %></th>
          <th><%= sort_link @presenter.search, :animal %></th>
          <th><%= sort_link @presenter.search, :last_administered %></th>
          <th><%= sort_link @presenter.search, :expires %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @presenter.shots.each do |shot| %>
          <tr>
            <td><%= link_to shot.name, admin_shot_path(shot) %></td>
            <td><%= link_to shot.animal.name, admin_animal_path(shot.animal) %></td>
            <td><%= shot.last_administered.strftime("%b %d %Y") unless shot.last_administered.blank? %></td>
            <td><%= shot.expires.strftime("%b %d %Y") unless shot.expires.blank? %></td>
            <td class="actions_column">
              <div class="btn-group">
                <a class="btn tooltip-class" href="/admin/shots/<%= shot.id %>" rel="tooltip" title="View Shot"><i class="icon-eye-open"></i></a>
                <% if can? :destroy, shot %>
                  <%= link_to raw("<i class='icon-remove'></i>"), admin_shot_path(shot),
                              :data => {:confirm => 'Are you sure you want to delete?'}, :method => :delete, :class => "btn tooltip-class", :rel => "tooltip", :title => "Delete" %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @presenter.shots %>
  </div>
</div>


<div class="modal hide fade" id="myModal">
  <div class="modal-header">
    <a class="close" data-dismiss="modal" href="#">Ã—</a>
    <h3>Advanced Search</h3>
  </div>
  <div class="modal-body">
    <%= search_form_for @presenter.search, :url => admin_shots_path, :html => { :class => "form-vertical"} do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name_cont %>

      <%= f.label :animal_id_eq %>
      <%= f.collection_select :animal_id_eq, @presenter.animals, :id, :name, :include_blank => true %>
  </div>
  <div class="modal-footer">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
    <a href="#" class="btn" data-dismiss="modal">Close</a>
  </div>
    <% end %>
</div>