<div class="dashboard-table">
	<% unless public_animals.blank? %>
		<table class="no-border">
			<thead class="no-border">
				<th>Animal</th>
				<th>View Count</th>
			</thead>
			<tbody class="no-border-x no-border-y">
				<% public_animals.each do |animal| %>
					<tr>
						<td><a href="/admin/animals/<%= animal.id %>-<%= animal.uuid %>"><%= animal.name %></a></td>
						<td><%= animal.impressions_count %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	<% else %>
		<p>No public animals.</p>
	<% end %>
</div>