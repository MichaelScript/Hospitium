<div class="row-fluid">
  <div class="span12">
    <div class="well">
      <div class="row-fluid">
        <div class="span6">
          <a class="btn" href="/admin/foster_contacts/new"><i class="icon-plus"></i>Add New Foster Contact</a>
          &nbsp;
          <a class="btn" href="/admin/foster_contacts.csv" id="animal_sync_button"><i class="icon-download"></i> Export</a>
        </div>
        <div class="span1"> &nbsp; </div>
        <div class="span5 pull-right">
        <a class="btn pull-right" data-toggle="modal" href="#myModal" ><i class="icon-search"></i> Advanced Search</a>
        </div>
      </div>
    </div>
    <table class="table table-striped table-bordered">
      <col><col><col><col><col><col><col><col>
      <thead>
        <tr>
          <th><%= sort_link @presenter.search, :first_name %></th>
          <th><%= sort_link @presenter.search, :last_name %></th>
          <th><%= sort_link @presenter.search, :address %></th>
          <th><%= sort_link @presenter.search, :phone %></th>
          <th><%= sort_link @presenter.search, :email %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @presenter.foster_contacts.each do |foster_contact| %>
          <tr>
            <td><a href="/admin/foster_contacts/<%= foster_contact.id %>"><%= foster_contact.first_name %></a></td>
            <td><%= foster_contact.last_name %></td>
            <td><%= foster_contact.address %></td>
            <td><%= number_to_phone(foster_contact.phone) %></td>
            <td><%= foster_contact.email %></td>
            <td class="actions_column">
              <div class="btn-group">
                <a class="btn tooltip-class" href="/admin/foster_contacts/<%= foster_contact.id %>" rel="tooltip" title="View Contact"><i class="icon-eye-open"></i></a>
                <% if can? :destroy, foster_contact %>
                  <%= link_to raw("<i class='icon-remove'></i>"), admin_foster_contact_path(foster_contact),
                              :data => {:confirm => 'Are you sure you want to delete?'}, :method => :delete, :class => "btn tooltip-class", :rel => "tooltip", :title => "Delete" %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <!-- <a class="btn" href="https://d4uktpxr9m70.cloudfront.net/pdfs/Adoption-Form.pdf"><i class="icon-file"></i> Download Foster Form</a> -->
    <%= will_paginate @presenter.foster_contacts %>
  </div>
</div>


<div class="modal hide fade" id="myModal">
  <div class="modal-header">
    <a class="close" data-dismiss="modal" href="#">Ã—</a>
    <h3>Advanced Search</h3>
  </div>
  <div class="modal-body">
    <%= search_form_for @presenter.search, :url => admin_foster_contacts_path, :html => { :class => "form-vertical"} do |f| %>
      <%= f.label :first_name_cont %>
      <%= f.text_field :first_name_cont %>
      <%= f.label :last_name_cont %>
      <%= f.text_field :last_name_cont %>

      <%= f.label :address_cont %>
      <%= f.text_field :address_cont %>
      <%= f.label :phone_cont %>
      <%= f.text_field :phone_cont %>
      <%= f.label :email_cont %>
      <%= f.text_field :email_cont %>

      <%= f.label :animals_id_eq, "Animal" %>
      <%= f.collection_select :animals_id_eq, @presenter.animal, :id, :name, :include_blank => true %>
  </div>
  <div class="modal-footer">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
    <a href="#" class="btn" data-dismiss="modal">Close</a>
  </div>
    <% end %>
</div>