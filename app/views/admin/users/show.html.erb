			<div class="alert alert-info"><a class="close" data-dismiss="alert" href="#">&times;</a> <%= notice %></div>
		<% end %>
			<div class="well">
				<div class="row-fluid">
					<div class="span6">
						<h1><%= best_in_place @user, :username, :type => :input, :nil => "Click me to add content!" %></h1>
					</div>
				</div>
			</div>
			<div class="row-fluid">
				<div class="tabbable span4 ">
					<ul class="nav nav-tabs">
						<li class="active"><a href="#1" data-toggle="tab">Details</a></li>
					</ul>
					<div class="tab-content">
						<div class="tab-pane active" id="1">
							<div class="">
								<p><strong>Email:</strong> <%= best_in_place @user, :email, :type => :input, :nil => "Click me to add content!" %></p>
