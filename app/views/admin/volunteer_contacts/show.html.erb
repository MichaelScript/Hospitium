<div class="row-fluid">
	<div class="span12 main-app-row">
		<% if notice.blank? %>

		<% else %>
			<div class="alert alert-info"><a class="close" data-dismiss="alert" href="#">&times;</a> <%= notice %></div>
		<% end %>
		<div class="well">
			<div class="row-fluid">
				<div class="span6">
					<h1><%= best_in_place @volunteer_contact, :first_name, :type => :input, :nil => "Click me to add content!" %> <%= best_in_place @volunteer_contact, :last_name, :type => :input, :nil => "Click me to add content!" %></h1>
				</div>
			</div>
		</div>
		<div class="row-fluid">
			<div class="tabbable span4 ">
				<ul class="nav nav-tabs">
					<li class="active"><a href="#1" data-toggle="tab">Overview</a></li>
				</ul>
				<div class="tab-content">
					<div class="tab-pane active" id="1">
						<div class="">
							<p><strong>Phone #:</strong> <%= best_in_place @volunteer_contact, :phone, :nil => "Click me to add content!", :display_as => :formatted_phone %></p>
							<p><strong>Email:</strong> <%= best_in_place @volunteer_contact, :email, :nil => "Click me to add content!" %></p>
							<p><strong>Address:</strong> <%= best_in_place @volunteer_contact, :address, :nil => "Click me to add content!" %></p>
							<p><strong>Application Date:</strong> <%= best_in_place @volunteer_contact, :application_date, :type => :date, :display_as => :formatted_application_date, :nil => "Click me to add content!" %></p>
						</div>
					</div>
				</div>
			</div>
		
			<div class="span8 map-block">
				<div id="map_canvas" style="height:409px;width:400px;"></div>
			</div>
		</div>
	</div>
</div>







<% content_for :javascript_footer do %>
	<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
	<script type="text/javascript">
		$(document).ready(function(){
			geocoder = new google.maps.Geocoder();
			geocoder.geocode( { 'address': '<%= @volunteer_contact.address %>'}, function(results, status) {
				if (status == google.maps.GeocoderStatus.OK) {
					var latlng = new google.maps.LatLng(results[0].geometry.location);
					var myOptions = {
						zoom: 12,
						center: latlng,
						mapTypeId: google.maps.MapTypeId.ROADMAP
					}
					map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
					map.setCenter(results[0].geometry.location);

					var contentString = '<div id="content">'+
						'<div id="siteNotice">'+
						'</div>'+
						'<h3 id="firstHeading" class="firstHeading"><%= @volunteer_contact.first_name %></h3>'+
						'<div id="bodyContent">'+
						'<p><%= @volunteer_contact.address %></p>'+
						'</div>'+
					'</div>';

					var infowindow = new google.maps.InfoWindow({
						content: contentString
					});

					var marker = new google.maps.Marker({
						map: map, 
						position: results[0].geometry.location,
						title: '<%= @volunteer_contact.first_name %>'
					});

					google.maps.event.addListener(marker, 'click', function() {
						infowindow.open(map,marker);
					});
				} else {
					//alert("Geocode was not successful for the following reason: " + status);
				}
			});
		});
	</script>
	
	<script type="text/javascript">
		//setup juggernaut to handle real time updating page changes
		//this one handles changes made with best in place
		var jug = new Juggernaut({
			secure: false,
			host: 'hospitium-juggernaut.herokuapp.com',
			port: 80,
			transports: ['xhr-polling','jsonp-polling']
		});

		jug.subscribe("/observer/volunteer_contact/<%= @volunteer_contact.id %>", function(data){
			var updated_text = "There was an update, but a problem displaying. Please refresh."
			jQuery.each(data.record, function(i, val) {
				if (i != "updated_at"){
					updated_text = val[1];
