<div class="row-fluid">
	<div class="span12">
		<%= form_for @volunteer_contact, :url => admin_volunteer_contacts_path, :validate => true do |f| %>
		  <% if @volunteer_contact.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@volunteer_contact.errors.count, "error") %> prohibited this volunteer_contact from being saved:</h2>

		      <ul>
		      <% @volunteer_contact.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>

		    <%= f.label :first_name %>
		    <%= f.text_field :first_name %>

		    <%= f.label :last_name %>
		    <%= f.text_field :last_name %>

		    <%= f.label :address %>
		    <%= f.text_field :address %>

		    <%= f.label :phone %>
		    <%= f.text_field :phone %>

		    <%= f.label :email %>
		    <%= f.text_field :email %>

		    <%= f.label :application_date %>
		    <%= f.text_field :application_date %>

				<hr />
						    <%= f.submit "Add Volunteer Contact", :class => "btn btn-primary submit-button" %>

		<% end %>
	</div>
</div>
<% content_for :javascript_footer do %>
	<script>
	$( "#volunteer_contact_application_date" ).datepicker();
	$.datepicker.setDefaults({
	   dateFormat: 'D, dd M yy' 
	});
	</script>
<%end%>
