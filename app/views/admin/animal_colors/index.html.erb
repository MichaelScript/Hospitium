<div class="row-fluid">
	<div class="span12">
		<div class="well">
			<div class="row-fluid">
				<div class="span6">
					<a class="btn" href="/admin/animal_colors/new"><i class="icon-plus"></i>Add New Animal Color</a>
				</div>
			</div>
		</div>
		<table class="table table-striped table-bordered">
			<col><col><col><col><col><col><col><col>
			<thead>
				<tr>
					<th><%= sort_link @search, :color %></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @animal_colors.each do |animal_color| %>
					<tr>
						<td><a href="/admin/animal_colors/<%= animal_color.id %>"><%= animal_color.color %></a></td>
						<td>
							<div class="btn-group">
								<a class="btn tooltip-class" href="/admin/animal_colors/<%= animal_color.id %>" rel="tooltip" title="View Contact"><i class="icon-eye-open"></i></a>
								<% if can? :destroy, animal_color %>
									<%= link_to raw("<i class='icon-remove'></i>"), admin_animal_color_path(animal_color),
									            :data => {:confirm => 'Are you sure you want to delete?'}, :method => :delete, :class => "btn tooltip-class", :rel => "tooltip", :title => "Delete" %>
								<% end %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<%= will_paginate @animal_colors %>
	</div>
</div>

