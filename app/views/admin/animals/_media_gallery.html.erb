<div class="col-sm-6 col-md-6 col-lg-6 pull-right animal-pics">
	<ul class="thumbnails">
		<li class="col-sm-6 col-md-6 col-lg-6">
			<a class="new_link image_new_button" data-toggle="modal" href="#image_1" ><i title="Click to add new" class="fa fa-upload tipster"></i></a>
			<a class="thumbnail" data-toggle="modal" href="#image_display_1" >
				<% unless animal.image.url(:medium) == "/images/medium/missing.png" %>
					<img src="<%= animal.image.url(:medium) %>" alt="" class="responsive-image">
				<% else %>
					<img src="https://d4uktpxr9m70.cloudfront.net/images/no-animal-new-size-logo2.png" alt="" class="responsive-image">
				<%end%>
			</a>
		</li>
		<li class="col-sm-6 col-md-6 col-lg-6">
			<a class="new_link image_new_button" data-toggle="modal" href="#image_2" ><i title="Click to add new" class="fa fa-upload tipster"></i></a>
			<a class="thumbnail" data-toggle="modal" href="#image_display_2" >
				<% unless animal.second_image.url(:medium) == "/second_images/medium/missing.png" %>
					<img src="<%= animal.second_image.url(:medium) %>" alt="" class="responsive-image">
				<% else %>
					<img src="https://d4uktpxr9m70.cloudfront.net/images/no-animal-new-size-logo2.png" alt="" class="responsive-image">
				<%end%>
			</a>
		</li>
	</ul>
	<ul class="thumbnails">
		<li class="col-sm-6 col-md-6 col-lg-6">
			<a class="new_link image_new_button" data-toggle="modal" href="#image_3" ><i title="Click to add new" class="fa fa-upload tipster"></i></a>
			<a class="thumbnail" data-toggle="modal" href="#image_display_3" >
				<% unless animal.third_image.url(:medium) == "/third_images/medium/missing.png" %>
					<img src="<%= animal.third_image.url(:medium) %>" alt="">
				<% else %>
					<img src="https://d4uktpxr9m70.cloudfront.net/images/no-animal-new-size-logo2.png" alt="">
				<%end%>
			</a>
		</li>
		<li class="col-sm-6 col-md-6 col-lg-6">
			<a class="new_link image_new_button" data-toggle="modal" href="#image_4" ><i title="Click to add new" class="fa fa-upload tipster"></i></a>
			<a class="thumbnail" data-toggle="modal" href="#image_display_4" >
				<% unless animal.fourth_image.url(:medium) == "/fourth_images/medium/missing.png" %>
					<img src="<%= animal.fourth_image.url(:medium) %>" alt="">
				<% else %>
					<img src="https://d4uktpxr9m70.cloudfront.net/images/no-animal-new-size-logo2.png" alt="">
				<%end%>
			</a>
		</li>
	</ul>
	<ul class="thumbnails">
		<li class="col-sm-12 col-md-12 col-lg-12 pull-right animal_thumb">
			<% unless animal.video_embed.blank? %>
				<a class="thumbnail" href="#" >
					<div class="embed-container">
						<%= raw Sanitize.clean(animal.video_embed, Sanitize::Config::YOUTUBE).sub(/http:/, 'https:') %>
					</div>
				</a>
				<br />
				<a class="btn btn-primary btn-rad btn-trans" data-toggle="modal" href="#video_upload" ><i class="fa fa-plus"></i> Add Video</a>
			<%else%>
				<a class="btn btn-primary btn-rad btn-trans" data-toggle="modal" href="#video_upload" ><i class="fa fa-plus"></i> Add Video</a>
			<%end%>
		</li>
	</ul>
</div>