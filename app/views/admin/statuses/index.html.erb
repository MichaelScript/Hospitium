<div class="row-fluid">
	<div class="span12">
		<% if notice.blank? %>

		<% else %>
			<div class="alert alert-info"><a class="close" data-dismiss="alert" href="#">&times;</a> <%= notice %></div>
		<% end %>
		<div class="well">
			<div class="row-fluid">
				<div class="span6">
					<a class="btn" href="/admin/statuses/new"><i class="icon-plus"></i>Add New Status</a>
				</div>
			</div>
		</div>
		<table class="table table-striped table-bordered">
			<col><col><col><col><col><col><col><col>
			<thead>
				<tr>
					<th><%= sort_link @search, :status %></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @statuses.each do |status| %>
					<tr>
						<td><a href="/admin/statuses/<%= status.id %>"><%= status.status %></a></td>
						<td>
							<div class="btn-group">
								<a class="btn tooltip-class" href="/admin/statuses/<%= status.id %>" rel="tooltip" title="View Status"><i class="icon-eye-open"></i></a>
								<% if can? :delete, status %>
									<%= link_to raw("<i class='icon-remove'></i>"), admin_statuses_path(status),
									            :confirm => 'Are you sure you want to delete?', :method => :delete, :class => "btn tooltip-class", :rel => "tooltip", :title => "Delete" %>
								<% end %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<%= will_paginate @statuses %>
	</div>
</div>
