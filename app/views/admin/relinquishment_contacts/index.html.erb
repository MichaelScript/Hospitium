<div class="row">
	<div class="col-sm-12 col-md-12 col-lg-12">
		<a class="btn btn-primary btn-rad btn-trans" href="/admin/relinquishment_contacts/new"><i class="fa fa-plus"></i>Add New Relinquishment Contact</a>
		&nbsp;
		<a class="btn btn-primary btn-rad btn-trans" href="/admin/relinquishment_contacts.csv" id="animal_sync_button"><i class="fa fa-download"></i> Export</a>
		&nbsp;
		<% unless current_user.organization.relinquishment_form.url == "/relinquishment_forms/original/missing.png" %>
			<%= link_to raw('<i class="fa fa-file"></i> Download Relinquishment Form'), current_user.organization.relinquishment_form.url, :class => "btn btn-primary btn-rad btn-trans" %>
		<% end %>

		<a class="btn btn-primary btn-rad btn-trans pull-right" data-toggle="modal" href="#myModal" ><i class="fa fa-search"></i> Advanced Search</a>
	</div>
</div>
<div class="row">
	<div class="col-sm-12 col-md-12 col-lg-12">
		<div class="block-flat">
			<table class="no-border">
				<col><col><col><col><col><col><col><col>
				<thead class="no-border">
					<tr>
						<th><%= sort_link @search, :first_name %></th>
						<th><%= sort_link @search, :last_name %></th>
						<th><%= sort_link @search, :address %></th>
						<th><%= sort_link @search, :phone %></th>
						<th><%= sort_link @search, :email %></th>
						<th></th>
					</tr>
				</thead>
				<tbody class="no-border-x no-border-y">
					<% @relinquishment_contacts.each do |relinquishment_contact| %>
						<tr>
							<td><a href="/admin/relinquishment_contacts/<%= relinquishment_contact.id %>"><%= relinquishment_contact.first_name %></a></td>
							<td><%= relinquishment_contact.last_name %></td>
							<td><%= relinquishment_contact.address %></td>
							<td><%= number_to_phone(relinquishment_contact.phone) %></td>
							<td><%= relinquishment_contact.email %></td>
							<td class="actions_column">
								<div class="btn-group">
									<a class="btn tipster" href="/admin/relinquishment_contacts/<%= relinquishment_contact.id %>" title="View Contact"><i class="fa fa-eye"></i></a>
									<% if can? :destroy, relinquishment_contact %>
										<%= link_to raw("<i class='fa fa-remove'></i>"), admin_relinquishment_contact_path(relinquishment_contact),
										            :data => {:confirm => 'Are you sure you want to delete?'}, :method => :delete, :class => "btn tipster", :title => "Delete" %>
									<% end %>
								</div>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<%= will_paginate @relinquishment_contacts, renderer: BootstrapPagination::Rails %>
		</div>
	</div>
</div>

<div class="modal colored-header" id="myModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
				<a class="close" data-dismiss="modal" href="#">Ã—</a>
				<h3>Advanced Search</h3>
      </div>
      <div class="modal-body" style="overflow:hidden;">
				<%= search_form_for @search, :url => admin_relinquishment_contacts_path, :html => { :class => "form-vertical"} do |f| %>
					<div class="form-group">
						<%= f.label :first_name_cont %>
						<%= f.text_field :first_name_cont, :class => "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :last_name_cont %>
						<%= f.text_field :last_name_cont, :class => "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :address_cont %>
						<%= f.text_field :address_cont, :class => "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :phone_cont %>
						<%= f.text_field :phone_cont, :class => "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :email_cont %>
						<%= f.text_field :email_cont, :class => "form-control" %>
					</div>

					<div class="form-group">
						<%= f.label :animals_id_eq, "Animal" %>
						<%= f.collection_select :animals_id_eq, @presenter.animal, :id, :name, :include_blank => true, :class => "form-control modal-select" %>
					</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Submit", :class => "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
