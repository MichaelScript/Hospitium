<div class="hero-unit clearfix">
	<div class="page-header">
  	<h1>Hospitium Blog!</h1>
	</div>
</div>

	<ul class="unstyled">
		<% @posts.each do |post| %>
			<li class="singleAnimalAdoption clearfix">
				<h1><a href="/posts/<%= post.id %>"><%= post.title %></a></h1>
				<strong><%= post.author %> posted on <%= post.created_at.strftime("%m-%d-%Y") %></strong>
				<hr />
				<p><%= post.content %></p>
			</li>
		<% end %>
		<%= will_paginate @posts %>
	</ul>

